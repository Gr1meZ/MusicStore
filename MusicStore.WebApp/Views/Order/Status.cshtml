@model MusicStore.Data.Models.UsersOrders
@{ 
    ViewData["Title"] = "Status";
}
@using (Html.BeginForm("ChangeStatus", "Order", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    
    <form method="post" asp-action="ChangeStatus">
         <div class="form-group">
                    <label>Type</label>
                      @Html.DropDownListFor(m => m.Status, Model.Status.ToSelectList(), new {@class = "form-control"})
                   
                </div>
        <button type="submit"class="btn btn-primary" id="btnSave"> Submit </button>
         @Html.HiddenFor(model => model.Id)
    </form>
}