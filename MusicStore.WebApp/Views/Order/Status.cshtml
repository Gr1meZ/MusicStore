@model OrderViewModel
@{ 
    ViewData["Title"] = "Status";
}
@using (Html.BeginForm("ChangeStatus", "Order", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    
    <form method="post" asp-action="ChangeStatus">
         <div class="form-group">
                    <label>@Localizer["Type"]</label>
                      @Html.DropDownListFor(m => m.Status, Model.Status.ToSelectList(), new {@class = "form-control"})
                   
                </div>
        <button type="submit"class="btn btn-primary" id="btnSave"> @Localizer["Submit"] </button>
         @Html.HiddenFor(model => model.Id)
         @Html.HiddenFor(model => model.UserId)
         @Html.HiddenFor(model => model.Type)
         @Html.HiddenFor(model => model.Email)
         @Html.HiddenFor(model => model.OrderId)
    </form>
}