@model MusicStore.WebApp.Models.ItemViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{ 
    ViewData["Title"] = "EditItem";
}
<h2>@Localizer["Edit Item"]</h2>

@using (Html.BeginForm("EditItem", "Item", FormMethod.Post,  new { enctype = "multipart/form-data" }))
{
   
        <form asp-action="EditItem" method="post">

            <div class="form-group">
                <label for="exampleInputName">@Localizer["Name"]</label>
                <input type="text" class="form-control" id="exampleInputName" placeholder="@Localizer["Enter name"]" asp-for="Name">
                <span asp-validation-for="Name"></span>

            </div>
            <div class="form-group">
                <label for="examplePrice">@Localizer["Price"]</label>
                <input type="Text" class="form-control" id="examplePrice" placeholder="@Localizer["Enter price"]" asp-for="Price">
                <span asp-validation-for="Price"></span>
            </div>

            <div class="form-group">
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">@Localizer["Description"]</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" placeholder="@Localizer["Enter description"]" rows="3" asp-for="Description"></textarea>
                    <span asp-validation-for="Description"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <img src="@("~/image/" + @Model.ImageName)" asp-append-version="true" width="500" height="600"/>
                    <input asp-for="ImageFile" class="form-control" accept="image/*" required>
                    <span asp-validation-for="ImageFile"></span>
                </div>

            </div>

            @Html.HiddenFor(model => model.Id)
            <input type="submit" value="@Localizer["Submit"]" CausesValidation="True"/>
        </form>
    }



   
<script type="text/javascript">

</script>
