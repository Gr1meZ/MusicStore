@model MusicStore.WebApp.Models.ItemViewModel
@{ 
    ViewData["Title"] = "AddItem";
}
@using (Html.BeginForm("AddItem", "Item", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="exampleInputEmail1">Name</label>
            <input type="text" id="exampleInputEmail1" class="form-control" placeholder="Enter name" asp-for="Name">
            <span asp-validation-for="Name"></span>

        </div>
        <div class="form-group">
             <label for="examplePrice">Price</label>
            <input type="Text" id="examplePrice" class="form-control" placeholder="Enter price" asp-for="Price">
            <span asp-validation-for="Price"></span>
        </div>
        <div class="form-group">
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Description</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" asp-for="Description"></textarea>
                <span asp-validation-for="Description"></span>
            </div>
        </div>
        <div class="form-group">
            <label>Type</label>
            @Html.DropDownListFor(model => model.TypeId,  ViewBag.Types as SelectList , new {@class = "form-control"})
            <span asp-validation-for="TypeId"></span>
        </div>
        <div class="form-group">
                   <div class="form-group">
                       <input asp-for="ImageFile" id="input_img"  class="form-control" accept="image/*" required> 
                       <span asp-validation-for="ImageName"></span> 
                   </div>
                    
               </div>
        <button type = "submit"class="btn btn-primary"  id="btnSave"> Submit </button>
    </form>
}

