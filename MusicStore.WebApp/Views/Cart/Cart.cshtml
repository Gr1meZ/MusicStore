@model IndexViewModel
@using (Html.BeginForm("GetCart", "Cart", FormMethod.Get, new {enctype = "multipart/form-data"}))
{
    <div class="cart_section">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-10 offset-lg-1">
                    <div class="cart_container">
                        <div class="cart_title">Shopping Cart</div>
                        <div class="cart_items">
                            <ul class="cart_list">
                                
                                @for (int i = 0; i < Model.Cart.Count; i++)
                                {
                                    <li class="cart_item clearfix">
                                        <div class="cart_item_image"><img src="@("~/image/" + Model.Cart[i].Item.ImageName)" asp-append-version="true" alt=""></div>
                                        <div class="cart_item_info d-flex flex-md-row flex-column justify-content-between">
                                            <div class="cart_item_name cart_info_col">
                                                <div class="cart_item_title">Name</div>
                                                <div class="cart_item_text">@Model.Cart[i].Item.Name</div>
                                            </div>
                                            <div class="cart_item_price cart_info_col">
                                                <div class="cart_item_title">Price</div>
                                                <div class="cart_item_text" id="total">@Model.Cart[i].Item.Price</div>
                                            </div>
                                              <div class="cart_item_price cart_info_col">
                                                  <div class="cart_item_title">Count</div>
                                                  <div class="cart_item_text" id="total"> 
                                                    @Html.TextBoxFor(m => m.ItemsQuantities[i], 
                                                        new { @min = "1", @max = "10", @type = "number", @id = "Items", @name = "Items",  @class="form-control"}) <br/>
                                                      </div>
                                                  </div>
                                            <div class="cart_item_price cart_info_col">
                                                <div class="cart_item_text"> 
                                                    @Html.ActionLink("Delete", "RemoveCartItem", "Cart", new {cartId = Model.Cart[i].Id}, new {})
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                }

                            </ul>
                        </div>
                        <div class="cart_buttons"> <button type="submit" class="button cart_button_clear" asp-action="Items">  Continue Shopping </button> 
                            <button type="submit" class="button cart_button_checkout"  asp-action="AddOrder" >Submit</button> </div>
                    </div>
                </div>
            </div>
        </div>

         @{
               var prevDisabled = !Model.Cart.HasPreviousPage ? "disabled" : "";
               var nextDisabled = !Model.Cart.HasNextPage ? "disabled" : "";
         }
          <a asp-action="GetCart"
                asp-route-pageNumber="@(Model.Cart.PageIndex - 1)"
                class="btn btn-default @prevDisabled">Previous
             </a>
              <a asp-action="GetCart"
                    asp-route-pageNumber="@(Model.Cart.PageIndex + 1)"
                    class="btn btn-default @nextDisabled">Next
                     </a>
    </div>
}